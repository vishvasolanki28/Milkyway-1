                    android:src="@drawable/ic_baseline_lock_24"
                    app:tint="@color/colorAccent1" />
                <EditText
                    android:id="@+id/pass_rsignup"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@null"
